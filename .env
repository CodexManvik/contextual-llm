# NVIDIA Model Configuration
NVIDIA_MODEL_PATH=models/prompt-task-and-complexity-classifier_vtask-llm-router
FALLBACK_THRESHOLD=0.6

# LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b
LLM_TEMPERATURE=0.3

# Voice Interface Configuration
SAMPLE_RATE=16000
VOICE_THRESHOLD=0.03

# ASR Configuration
ASR_DEFAULT_SYSTEM=whisper
ASR_FALLBACK_SYSTEM=vosk
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_LANGUAGE=en
WHISPER_BEAM_SIZE=1
WHISPER_VAD_FILTER=true

# User Preferences
USER_NAME=User
ASSISTANT_NAME=AI Assistant
GREETING_STYLE=friendly
PRIVACY_LEVEL=standard

# Performance Settings
MAX_RESPONSE_TOKENS=300
BACKGROUND_TRAINING_ENABLED=false
RESOURCE_MONITORING_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/autonomous_assistant.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5
