{
  "asr": {
    "default_system": "whisper",
    "fallback_system": "vosk",
    "whisper": {
      "model": "small",
      "device": "cpu",
      "compute_type": "int8",
      "language": "en",
      "beam_size": 1,
      "vad_filter": true
    },
    "vosk": {
      "model_paths": [
        "models/vosk/vosk-model-en-in-0.5"
      ]
    }
  },
  "voice_interface": {
    "sample_rate": 16000,
    "voice_threshold": 0.03
  },
  "nvidia_model": {
    "enabled": true,
    "model_path": "models/prompt-task-and-complexity-classifier_vtask-llm-router",
    "fallback_threshold": 0.6,
    "task_type_mapping": {
      "0": "conversation",
      "1": "system_control",
      "2": "whatsapp_send",
      "3": "web_search",
      "4": "file_operation",
      "5": "keyboard_mouse",
      "6": "multi_step"
    }
  }
}
